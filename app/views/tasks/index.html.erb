<h1>タスク一覧</h1>

<% @tasks.each do |task| %>
  <table>
    <tr>
      <th><h4>タスク名</h4></th>
      <th><h4>タスク内容</h4></th>
    </tr>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to '詳細', task_path(task) %></td>
      <td><%= link_to '編集', edit_task_path(task) %></td>
      <td><%= link_to '削除', task_path(task), data: { turbo_method: :delete } %></td>
    </tr>
  </table>
<% end %>

<%= link_to '新しいタスクを登録する', new_task_path %>